generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model greeting {
  id      Int    @id @default(autoincrement())
  message String
}

// Change autoincremt to 'id String @id @default(uuid())'
// Then figure out how to make a database backup
// and replace the id's with uuid's without losing any data
model task {
  id           Int      @id @default(autoincrement())
  description  String
  completed    Boolean  @default(false)
  creationDate DateTime @default(now())
}
